    /*     "args": ["start"], */
    /*     "filetypes": ["sh"], */
    /*     "ignoredRootPaths": ["~"] */
    /* } */
  },

  "bookmark.sign": "",

  //coc-emoji
  "coc.source.emoji.filetypes": ["markdown"]

  // lua
  //"lua.useSumnekoLs": true,
